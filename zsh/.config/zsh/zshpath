if [[ "$OSTYPE" == "darwin"* ]]; then
  # Add to $PATH variable
  path=(
    $path
  )

  # Add to ZSH function paths
  fpath=(
    $fpath
  )
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
  # Add to $PATH variable
  path=(
    $VOLTA_HOME/bin
    $path
  )

  # Add to ZSH function paths
  fpath=(
    "${XDG_DATA_HOME:-${HOME}/.local/share}/zsh/completions"
    $fpath
  )
fi
