if [[ "$OSTYPE" == "darwin"* ]]; then
  # Add to $PATH variable
  path=(
    $path
  )

  # Add to ZSH function paths
  fpath=(
    $fpath
  )
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
  # Add to $PATH variable
  path=(
    $path
  )

  # Add to ZSH function paths per distro
  if [ -f /etc/redhat-release ]; then
    fpath=(
      $fpath
    )
  elif [ -f /etc/lsb-release ]; then
    fpath=(
      $fpath
    )
  fi
fi
